// prisma/schema.prisma

// --- Configure DB + Client ---
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --- Models ---
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tracks Track[]
}

model Track {
  id           String   @id @default(cuid())
  title        String
  description  String?
  audioUrl     String
  storagePath  String
  artworkUrl   String?
  durationSec  Int?
  waveformJson Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])
}
