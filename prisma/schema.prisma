// prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- MODELS ---

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tracks    Track[]
}

model Track {
  id           String   @id @default(cuid())
  title        String
  description  String?
  audioUrl     String      // <-- match DB column name
  storagePath  String
  artworkUrl   String?
  durationSec  Int?
  waveformJson Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId String
  user   User     @relation(fields: [userId], references: [id])
}

